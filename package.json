{
  "name": "pumpfun-content",
  "version": "1.0.0",
  "description": "Solana Pump.fun and PumpSwap Integration",
  "main": "dist/main.js",
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "yarn run clean",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "example": "ts-node src/examples/pump-fun-examples.ts",
    "example:test": "dotenv -e env.test -- ts-node src/examples/pump-fun-examples.ts",
    "dapp": "ts-node src/examples/web-dapp-example.ts",
    "dapp:test": "dotenv -e env.test -- ts-node src/examples/web-dapp-example.ts",
    "generate-signature": "node scripts/generate-signature.js",
    "test-signature": "node scripts/test-signature.js",
    "verify-devnet": "node scripts/verify-devnet-setup.js",
    "test-buy-sell": "node scripts/test-buy-and-sell.js",
    "test-buy": "node scripts/test-buy.js",
    "test-sell": "node scripts/test-sell.js"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "@cryptoscan/pumpfun-sdk": "^1.3.1",
    "@metaplex-foundation/js": "^0.20.1",
    "@metaplex-foundation/mpl-token-metadata": "^3.2.1",
    "@metaplex-foundation/umi": "^0.9.1",
    "@nestjs/common": "^10.3.3",
    "@nestjs/core": "^10.3.3",
    "@nestjs/platform-express": "^10.3.3",
    "@prisma/client": "^6.4.1",
    "@project-serum/anchor": "^0.26.0",
    "@pump-fun/pump-sdk": "1.21.0",
    "@pump-fun/pump-swap-sdk": "1.10.0",
    "@solana/spl-token": "^0.4.8",
    "@solana/web3.js": "^1.95.5",
    "@supabase/supabase-js": "^2.81.1",
    "bs58": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^16.4.5",
    "jito-js-rpc": "^0.2.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@nestjs/cli": "11.0.9",
    "@nestjs/common": "11.1.6",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "11.1.6",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^11.1.6",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/swagger": "^7.0.0",
    "@nestjs/testing": "^10.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.1.6",
    "@types/bn.js": "^5.1.6",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.2",
    "dotenv-cli": "^7.4.1",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
